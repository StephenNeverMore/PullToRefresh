<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stephen.helloworld.activity.CloseActivity">


    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#999999"
        android:clickable="true">

        <View
            android:id="@+id/up"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_above="@+id/midle1"
            android:layout_alignLeft="@+id/midle1"
            android:layout_marginBottom="5dp"
            android:background="@color/color_write" />

        <View
            android:id="@+id/midle1"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:background="@color/color_write" />
        <View
            android:id="@+id/midle2"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:background="@color/color_write" />

        <View
            android:id="@+id/down"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_alignLeft="@+id/midle1"
            android:layout_below="@+id/midle1"
            android:layout_marginTop="5dp"
            android:background="@color/color_write" />


    </RelativeLayout>

</RelativeLayout>
